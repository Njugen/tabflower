{
    "manifest_version": 2,
    "name": "Tabeon",
    "version": "0.0.1",
    "description": "A workflow scheduler and tab manager created to assist in daily surfing.",
    "icons": {
        "192": "logo192.png",
        "512": "logo512.png"
    },
	"browser_action": {
        "default_icon": "logo192.png",
        "default_title": "Tabeon",
        "default_popup": "index.html"
    },
    "options_ui": {
		"page": "index.html",
		"open_in_tab": true
	},
    "sidebar_action": {
        "default_icon": "logo192.png",
        "default_title": "Tabeon",
        "default_panel": "index.html"
    },
    "background": {
        "scripts": [
            "background/receiver.js",
            "background/windowsAndTabs.js",
            "background/storage.js"
        ],
        "persistent": true
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "<all_urls>"
    ]
}